{
    "name": "Water_alarm",
    "version": "1.0",
    "description": "remind user to drink water",
    "permissions": [
        "notifications",
        "alarms",
        "storage"
    ],
    "action": {
        "default_title": "Drink Water alarm",
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/drink_water16.png",
        "32": "icons/drink_water32.png",
        "48": "icons/drink_water48.png",
        "128": "icons/drink_water128.png"
    },
    "manifest_version": 3
}